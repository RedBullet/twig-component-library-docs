<!doctype html>
{% block sg_base_html %}
<html class="no-js">
{% endblock %}
{% block sg_base_head %}
<head>
    <meta charset="utf-8" />
    <title>{{ site.name }}</title>
    <base href="/">
    {% block sg_base_stylesheets %}
      {% if stylesheets %}
      {% for stylesheet in stylesheets %}
        <link rel="stylesheet" href="{{ stylesheet.href }}" type="text/css" media="screen" />
      {% endfor %}
      {% endif %}
      {% block sg_base_stylesheets_include %}{% endblock %}
    {% endblock %}
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
{% endblock %}
{% block sg_base_body %}
<body class="sg">
  {% block sg_base_content %}{% endblock %}
  {% block sg_base_scripts %}
    {% if scripts %}
    {% for script in scripts %}
    <script src="{{ script.src }}"></script>
    {% endfor %}
    {% endif %}
    {% block sg_base_scripts_include %}{% endblock %}
  {% endblock %}
</body>
{% endblock %}
</html>
